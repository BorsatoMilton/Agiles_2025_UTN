{
  "name": "ahorcado",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:e2e": "cypress run --spec \"cypress/e2e/features/**/*.feature\"",
    "test:e2e:open": "cypress open --e2e",
    "test:e2e:headed": "cypress run --spec \"cypress/e2e/features/**/*.feature\" --headed",
    "test:e2e:focus": "cypress run --spec \"cypress/e2e/features/**/*.feature\" --env TAGS=\"@focus\"",
    "start:coverage": "ng serve --extra-webpack-config webpack.coverage.js",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "coverage:report": "nyc report --reporter=html",
    "cypress:coverage": "start cmd /k \"npm run start:coverage\" & npx wait-on http://localhost:4200 && npx cypress run && npm run coverage:report",
    "test:e2e:ci": "npx wait-on http://localhost:4200 && npx cypress run --spec \"cypress/e2e/features/**/*.feature\" && npm run coverage:report"
    
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.11",
    "@angular/common": "^20.3.7",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.7",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.11",
    "@angular/platform-browser": "^20.3.7",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.7",
    "@angular/ssr": "^20.3.6",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "ts-jest": "^29.4.5",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.8",
    "@angular/build": "^20.3.6",
    "@angular/cli": "^20.3.6",
    "@angular/compiler-cli": "^20.3.0",
    "@badeball/cypress-cucumber-preprocessor": "^23.2.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.7",
    "@cucumber/cucumber": "^12.2.0",
    "@cypress/code-coverage": "^3.14.7",
    "@types/express": "^5.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.23",
    "coverage-istanbul-loader": "^3.0.5",
    "cross-env": "^10.1.0",
    "cypress": "^15.6.0",
    "esbuild": "^0.25.12",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^15.0.3",
    "ngx-build-plus": "^20.0.0",
    "nyc": "^17.1.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "cypress/e2e/features/**/*.ts"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
