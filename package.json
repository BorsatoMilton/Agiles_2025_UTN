{
  "name": "ahorcado",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:e2e": "cross-env TS_NODE_PROJECT=tsconfig.node.json cucumber-js --require-module ts-node/register --require features/step_definitions/*.ts"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.7",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.7",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.7",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.7",
    "@angular/ssr": "^20.3.6",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "ts-jest": "^29.4.5",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.6",
    "@angular/cli": "^20.3.6",
    "@angular/compiler-cli": "^20.3.0",
    "@cucumber/cucumber": "^12.2.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.23",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^15.0.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
